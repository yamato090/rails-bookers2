<div class="box">
<% if @book.errors %>
   <ul>
<% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
        </ul>
      <% end %>

 <div class= "col-xs-3">
  <h2>User info</h2>
   <%#= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>

   <h5>name</h5>
   <%= @book.user.name %>
   <h5>introduction</h5>
   <%= @book.user.introduction %>
   <%= link_to"",edit_user_path(@book.id) %>
        <!-- form_for部分 -->
   <%= form_for(@book_new,  url: books_path)  do |f| %>


    <h2>New book</h2>
    <h4>Title</h4>
     <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <nav>
     <%= f.submit 'Create Book' %>
    </nav>
    <% end %>
  </div>
  <div class= "">
    <h2>Book detail</h2>
    <table class='table' >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
        <%#= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
         <nav>
           <%= @book.user.name %>
         </nav>
       <% end %>
    </td>
    
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"edit", edit_book_path(@book.id), %></td>
    <td><%= link_to "destroy", book_path(@book.id),  destroy(@book.id), method: :delete %></td>
    <% end %>
    </tr>
    </table>
  </div>
</div>