<div>
　<div>
    <%= render 'books/books', book: @book %>
　</div>
　<div>
　  <%= form_with model:@book  do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <nav><%= f.submit 'Create Book' %></nav>
    <% end %>
  </div>



  <div>
    <h2>Book detail</h2>
    <table>
      <tr>
        <td>
        <%= link_to user_path(@book.user) do %>
        <%= attachment_image_tag(@book.user, :profile_image, size:"40x40", fallback: "no_image.jpg") %>
        <nav><%= @book.user.name %></nav>
        <% end %>
        </td>
        <td><%= link_to @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "Destroy",book_path(@book), method: :delete %></td>
        <% end %>
      </tr>
    </table>
  </div>
</div>