　<div>
  <%= form_with model:@user  do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <nav><%= f.submit 'Create Book' %></nav>
    <% end %>
  </div>
  <div>
    <h2>Books</h2>
    <table>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <%= link_to user_path(@user.id) do %>
      <tr>
        <td><%= attachment_image_tag(@book.user, :profile_image, size:"40x40", fallback: "no_image.jpg") %></td>
        <% end %>
        <td><%=link_to book.title, book_path(book.id)%></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
